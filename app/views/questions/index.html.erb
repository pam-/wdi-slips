<section class="left">
	<%= form_for @question do |f| %> 
	<%= f.text_field :title %> 
	<%= f.text_area :content %> 
	<%= f.text_field :tags, value: '', placeholder: 'tags' %> 
	<%= f.submit %> 
	<% end %>
</section>  

<section class="questions-list right">
	<% @questions.each do |question| %> 
		<p> 
			<%= link_to question.title, question_path(question) %>
				<% question.tags.each do |tag| %>  
			 		<small> <%= link_to "##{tag.content}", tag_path(tag) %>  </small>
				<% end %>  
		 </p>
	<% end %> 
</section> 