<h1><%= @topic.title%></h1>

<%= form_for @question do |f| %>
	<%= f.hidden_field :topic_id, value: @topic.id%>
	<%= f.text_field :content %>
	<%= f.submit %>
<% end %>

<% @questions.each do |question| %>
	<p data-id="<%= question.id %> "> 
		<%= question.content %>  <span class="delete">x</span>
	</p>
<% end %>