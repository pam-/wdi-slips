<aside class="questions-list">
<h1> Recent Questions </h1>
		<% @questions.each do |question| %>
			<div>
				<h2><%= link_to question.title, question_path(question) %> <small> by <%= link_to question.user.username, question.user %>  </small></h2>
				<% question.tags.each do |tag| %> 
					<small><%= link_to "##{tag.content}", tag_path(tag) %></small>  
				<% end %> 
			</div>
		<% end %> 
</aside>

<aside class="objective-generator">
	<h1> Objective of the Day </h1>
	<% if @objective %> 
		<p>
			<%= @objective.content %> 
		</p>
	<% end %> 
	<button> Another one!! </button>
</aside>